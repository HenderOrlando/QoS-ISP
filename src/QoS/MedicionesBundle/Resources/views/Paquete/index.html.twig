{% extends 'QoSAdminBundle:Secured:index.html.twig' %}

{% block title %}- Paquetes {% endblock %}

{% block rowMain %}
    {#% set tablaPaquetes %}
        {% include 'QoSAdminBundle:Paquete:_index.html.twig' with {entities: entities} %}
    {% endset %#}

    {% for rm in rowMains %}
        {{- include ('QoSAdminBundle:Secured:_rowMain.html.twig',{
            rowMain: rm
        }) -}}
    {% endfor %}
{% endblock rowMain %}
{% block rowSideBar %}
    {% include 'QoSMedicionesBundle:Paquete:newSidebar.html.twig' with {
        form: form,
    } %}
{% endblock rowSideBar %}

{% block dataGrafico %}
    <script type="text/javascript">
        var dataGraf = [];
        {% if datosGrafico is defined and datosGrafico is not empty %}
            {% for dg in datosGrafico if dg.name is defined %}
                dataGraf['{{-dg.name-}}'] = [];
                {% for i, val in dg.values %}
                    dataGraf['{{-dg.name-}}']["{{-i-}}"] = JSON.parse('{' +
                        '"value":{{-val.value-}},' +
                        '"color":"'+getColor("{{-i-}}", true)+'",' +
                        '"highlight":"'+getColor("{{-i-}}") + '",' +
                        '"label":"{{-val.label-}}"' +
                    '}');
                {% else %}
                    console.log('sin datos');
                {% endfor %}
            {% endfor %}
        {% endif %}
    </script>
{% endblock dataGrafico %}