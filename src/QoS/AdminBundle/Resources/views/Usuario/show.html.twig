{% extends 'QoSAdminBundle:Secured:index.html.twig' %}

{% block rowSideBar -%}
    {% if entity is defined and entity is not null %}
        {% if form is defined %}
            {{ form_start(form) }}
                <ul class="nav nav-sidebar nav-20">
                    <li class="border-t border-b title">
                        <h3>
                            Usuario {{entity.username}}
                        </h3>
                    </li>
                    <li>
                        <div class="form-group">
                            {{ form_row(form.docId) }}
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            {{ form_row(form.username) }}
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                    </li>
                    {% if form.clave is defined %}
                        <li>
                            <div class="form-group">
                                {{ form_row(form.clave) }}
                            </div>
                        </li>
                    {% endif %}
                    {% if form.rol is defined %}
                        <li>
                            <div class="form-group">
                                {{ form_row(form.rol) }}
                            </div>
                        </li>
                    {% endif %}
                    <li class="border-t border-b title text-center">
                        {{- form_row(form.submit,{ 'attr': {'class': 'btn btn-lg btn-primary btn-block border-radius-none'} }) -}}
                    </li>
                </ul>
                <div class="hide">
                    {{- form_rest(form) -}}
                </div>
            {{ form_end(form) }}
                <ul class="nav nav-sidebar">
                    <li class="border-t border-b title text-center">
                        <a href="{{ path('Usuario') }}" class="btn btn-lg btn-default btn-block border-radius-none">
                            Volver a lista de Usuarios
                        </a>
                    </li>
                </ul>
                {% if delete_form is defined and delete_form is not null %}
                    <ul class="nav nav-sidebar">
                        <li class="border-t border-b title text-center">
                            {{ form(delete_form) }}
                        </li>
                    </ul>
                {% endif %}
        {% else %}
            <ul class="nav nav-sidebar">
                <li class="border-t border-b title">
                    <h3>
                        {{- entity.rol -}}
                    </h3>
                </li>
                <li>
                    <div class="form-group">
                        Nombre de Usuario: {{- entity.username -}}
                    </div>
                </li>
                <li>
                    <div class="form-group">
                        Documento de Id:{{- entity.docid -}}
                    </div>
                </li>
                <li>
                    <div class="form-group">
                        Email: {{- entity.email -}}
                    </div>
                </li>
                <li class="border-t border-b title text-center">
                    <a href="{{ path('Usuario') }}" class="btn btn-lg btn-default btn-block border-radius-none">
                        Volver a lista de Usuarios
                    </a>
                </li>
                <li class="border-t border-b title text-center">
                    {% if delete_form is defined and delete_form is not null %}
                            {{ form(delete_form) }}
                    {% endif %}
                </li>
            </ul>
        {% endif %}
    {% else %}
        <div class="label label-warning label-lg">
            El Usuario no es v√°lido.
        </div>
    {% endif %}
{% endblock rowSideBar %}
    
